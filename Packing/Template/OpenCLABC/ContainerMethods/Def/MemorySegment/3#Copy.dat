


# Copy[%direction:To,From%]!AutoSize
mem: CommandQueue<MemorySegment>
!Enqueue
cl.EnqueueCopyBuffer(
  cq, {%direction? o.ntv,!mem!.ntv : !mem!.ntv,o.ntv %},
  UIntPtr.Zero, UIntPtr.Zero,
  o.Size64<!mem!.Size64 ? o.Size : !mem!.Size,
  !evs!
).RaiseIfError;



# Copy[%direction:To,From%]
mem: CommandQueue<MemorySegment>; from_pos, to_pos, len: CommandQueue<integer>
!Enqueue
cl.EnqueueCopyBuffer(
  cq, {%direction? o.ntv,!mem!.ntv : !mem!.ntv,o.ntv %},
  new UIntPtr(!from_pos!), new UIntPtr(!to_pos!),
  new UIntPtr(!len!),
  !evs!
).RaiseIfError;


