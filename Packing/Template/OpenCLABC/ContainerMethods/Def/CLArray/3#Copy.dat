


# Copy[%direction:To,From%]!AutoSize
a: CommandQueue<CLArray<T>>
!Enqueue
cl.EnqueueCopyBuffer(
  cq, {%direction? o.ntv,!a!.ntv : !a!.ntv,o.ntv %},
  UIntPtr.Zero, UIntPtr.Zero,
  new UIntPtr(Min(o.ByteSize, a.ByteSize)),
  !evs!
).RaiseIfError;



# Copy[%direction:To,From%]
a: CommandQueue<CLArray<T>>; from_ind, to_ind, len: CommandQueue<integer>
!Enqueue
cl.EnqueueCopyBuffer(
  cq, {%direction? o.ntv,!a!.ntv : !a!.ntv,o.ntv %},
  new UIntPtr(!from_ind!*Marshal.SizeOf&<T>), new UIntPtr(!to_ind!*Marshal.SizeOf&<T>),
  new UIntPtr(!len!*Marshal.SizeOf&<T>),
  !evs!
).RaiseIfError;


