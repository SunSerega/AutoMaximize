


# FillData!AutoSize
ptr: CommandQueue<IntPtr>; pattern_len: CommandQueue<integer>
!Enqueue
cl.EnqueueFillBuffer(
  cq, o.ntv,
  !ptr!, new UIntPtr(!pattern_len!),
  UIntPtr.Zero, o.Size,
  !evs!
).RaiseIfError;

# FillData
ptr: CommandQueue<IntPtr>; pattern_len, offset, len: CommandQueue<integer>
!Enqueue
cl.EnqueueFillBuffer(
  cq, o.ntv,
  !ptr!, new UIntPtr(!pattern_len!),
  new UIntPtr(!offset!), new UIntPtr(!len!),
  !evs!
).RaiseIfError;



# FillValue[%auto sz: !AutoSize, %]
val: TRecord{%auto sz?:; offset, len\: CommandQueue<integer>%}
!Enqueue
cl.EnqueueFillBuffer(
  cq, o.ntv,
  new IntPtr(!val:ptr!), new UIntPtr(Marshal.SizeOf&<TRecord>),
  {%auto sz? UIntPtr.Zero, o.Size : new UIntPtr(!offset!), new UIntPtr(!len!) %},
  !evs!
).RaiseIfError;

